<div class="box">
    <h3>Update your profile here</h3>

    {{> error}}
    {{> success}}

    <form method="post">
        {{#userInfo}}
        <input type="text" name="first", placeholder="First Name", value={{first}}>
        <input type="text" name="last", placeholder="Last Name", value={{last}}>
        <input type="email" name="email", placeholder="Email", value={{email}}>
        <input type="password" name="password" placeholder="New Password">
        <input type="number" name="age", placeholder="Age", value={{age}}>
        <input type="text" name="city", placeholder="City", value={{city}}>
        <input type="url" name="homepage", placeholder="Homepage", value={{url}}>
        {{/userInfo}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button>Save changes</button>
    </form>


    <button id="delete">Delete Account</button>

    <a href="/petition"><button>Back</button></a>

</div>

<div id="popup-overlay">
    <div id="popup">
        <h3>Confirmation</h3>
        <p>Are you sure you want to delete your account?</p> 
        <form method="post">
            <input type="hidden" name="deleteAcc" value="true">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button class="button">Yes</button>
        </form>
        <button class="button">No</button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/delete.js"></script>
