<div class="box">
    <h3>Thanks, {{name}}, for signing!</h3>

    <img class="sig" src={{sig}} alt="signature">

    <p id="signers">
        Make sure to visit our <a href="/signers">list of all {{sigCount}} signers</a> to find out who else signed!
    </p>

    {{> error}}

    <button id="delete">DELETE SIGNATURE</button>
</div>

<div id="popup-overlay">
    <div id="popup">
        <h3>Confirmation</h3>
        <p>Are you sure you want to revoke your signature?</p> 
        <form method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button class="button">YES</button>
        </form>
        <button class="button">NO</button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/delete.js"></script>
